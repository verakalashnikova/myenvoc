<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Before Android 3.0 -->
    <style name="MyenvocTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:tabWidgetStyle">@style/CustomTabWidget</item>
    </style>

    <style name="CustomTabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/CustomTabWidgetText</item>
    </style>

    <style name="CustomTabWidgetText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="boldInDictionary">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dictionaryColor</item>
    </style>

    <style name="synsetType">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="label">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="transcription">
        <item name="android:textSize">16sp</item>        
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>
    
    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>
    
    <style name="GenericProgressIndicatorSmall" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    
    <color name="dictionaryColor">#302226</color>
    <color name="blue">#498AF2</color>
    <color name="white">#FFFFFF</color>
    <color name="red">#D84A38</color>
    <color name="exampleColor">#A3770F</color>
    <color name="lightGrey">#CDCDCD</color>
    <color name="darkGrey">#626262</color>
    <color name="errorColor">#D84A38</color>
    <color name="beidge">#FAF8CC</color>
    <color name="beidgeBorder">#ECD872</color>
    
    <color name="platinum">#E5E4E2</color>
    <color name="platinumDarker">#BDBCBA</color>
    
    

    <color name="dontShowAgainDialogColor">#CDCDCD</color>

    
</resources>